
<!--
    Страница добавления курса.
-->

<h1>Add course</h1>
<form action="/add" method="POST">
    <div class="input-field col s6">
        <input id="title" type="text" class="validate" name="title" required>
        <label for="title">Title</label>
    </div>

    <div class="input-field col s6">
        <input id="price" type="text" class="validate" name="price" required>
        <label for="price">Price</label>
    </div>

    <div class="input-field col s6">
        <input id="course_image" type="text" class="validate" name="imgURL" required>
        <label for="course_image">Image URL</label>
    </div>
    <input type="hidden" value="{{csurf}}" name="_csrf">
    <button type="submit" class="btn standart-btn">Добавить курс</button>
</form>
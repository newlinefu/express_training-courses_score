<h1>My orders</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col offset-s3 s6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            {{id}}
                        </span>
                        <p class="date">{{date}}</p>
                        <p><em>{{user.id.name}} </em><strong>{{user.id.email}}</strong></p>
                        <ol>
                            {{#each courses}}
                                <li>
                                    <span>{{course.title}} (x{{count}})</span>
                                </li>
                            {{/each}}
                        </ol>
                        <hr>
                        <span style="font-size: 22px;">Total:</span> <span class="price">{{totalPrice}}</span>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <div>
        Orders not found
    </div>
{{/if}}
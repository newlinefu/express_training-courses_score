<h1>All courses</h1>

{{#if courses }}
    {{#each courses}}
        <div class="row">
            <div class="col s12 m7">
                <div class="card">
                    <div class="card-image">
                        <img src={{imgURL}}>
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p class="price">{{price}}</p>
                    </div>
                    <div class="card-action">
                        <div class="card_links">
                            <a href="/all-courses/{{id}}" target="_blank">Show</a>
                            <a href="/all-courses/{{id}}/edit-course?allow=true" target="_blank">Edit</a>
                        </div>
                        <div class="card_buy">
                            <form action="/card" method="POST">
                                <input type="hidden" value="{{id}}">
                                <button type="submit" class="btn standart-btn">Buy</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{ else }}
    <p>Нет курсов</p>
{{/if }}